<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="150dp"
    android:background="@drawable/sample_photoview"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp">

            <TextView
                android:id="@+id/location_pv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Sample sample sample sample sample sample"
                android:singleLine="false"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/price_pv"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="238K"
                android:layout_marginLeft="70dp"
                android:textStyle="bold"
                android:textColor="#ffffff"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/house_sqm_pv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="234 sqm"
                android:fontFamily="Roboto-Bold"
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/house_br_pv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2BR"
                android:fontFamily="Roboto-Bold"
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="14dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/house_ba_pv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1BA"
                android:fontFamily="Roboto-Bold"
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="14dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/house_id_pv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:21DC4"
                android:fontFamily="Roboto-Bold"
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="14dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/inquire_pv"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="100dp"
                android:gravity="top"
                android:text="@string/inquire_pv"
                android:textSize="8dp"/>
        </LinearLayout>
</LinearLayout>




